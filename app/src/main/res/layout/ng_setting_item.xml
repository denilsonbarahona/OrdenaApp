<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:background="#fff"
        android:orientation="vertical"
        android:id="@+id/ng_lyheader"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/ng_header_text_setting"
            android:text="Header"
            android:layout_marginLeft="16dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/selectable_item_background"
        android:orientation="horizontal"
        android:id="@+id/ng_lysetting_name">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/ng_SettingName"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/primary_text"
                android:textSize="14sp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="16dp"
                android:text="Setting Text" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:background="#d5d5d5"
        android:id="@+id/ng_Item_separator"
        android:layout_height="0.01px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ng_layout_app_version"
        android:background="#f9f9f9"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#4b4b4b"
            android:paddingTop="40dp"
            android:layout_gravity="bottom"
            android:text="Ordena App Version 1.0"
            android:id="@+id/app_version"/>


    </LinearLayout>

</LinearLayout>
