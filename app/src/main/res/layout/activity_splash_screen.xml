<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="80dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ng_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Bienvenido a Ordena!"
                android:textAlignment="center"
                android:textColor="@color/WhiteColor"
                android:textSize="15.5sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/ic_ordena"
                android:id="@+id/ng_OnBringIt"
                android:layout_height="200dp"
                android:layout_centerInParent="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="140dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/ng_line"
                    android:layout_marginRight="100dp"
                    android:layout_marginLeft="100dp"
                    android:layout_below="@+id/ng_motto"
                    android:layout_height="1px"
                    android:background="@color/WhiteColor"
                    android:orientation="horizontal"></LinearLayout>

                <TextView
                    android:id="@+id/ng_terms_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ng_line"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="TÃ©rminos y Condiciones"
                    android:textAlignment="center"
                    android:textColor="@color/WhiteColor"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:paddingTop="2dp"
                    android:text="Aceptar y Continuar"
                    android:textSize="11sp"
                    android:paddingRight="25dp"
                    android:paddingLeft="25dp"
                    android:textStyle="bold"
                    android:id="@+id/ng_accept_terms"
                    android:textColor="@color/WhiteColor"
                    android:fontFamily="sans-serif"
                    android:background="@color/colorAccent"
                    android:paddingBottom="2dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>



</android.support.design.widget.CoordinatorLayout>