<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/selectable_item_background"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ng_tracing_item"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="72dp"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/ng_order_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:text="Order Number #2482011"
                    android:textColor="@color/primary_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/ng_order_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:text="YESTERDAY"
                    android:textAlignment="center"
                    android:textColor="@color/secondary_text"
                    android:textSize="11sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/ng_order_address"
                android:layout_width="wrap_content"
                android:text="Dirección de Entrega: Casa"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:textSize="11sp"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/ng_order_state"
                android:layout_width="wrap_content"
                android:text="Entregado"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:textStyle="bold"
                android:textSize="11sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:id="@+id/ng_ShowItems"
            android:paddingLeft="10dp"
            android:layout_height="72dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="Ver Artículos"
                android:textStyle="bold"
                android:textSize="10sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#d5d5d5"
        android:layout_height="1px"></LinearLayout>



</LinearLayout>